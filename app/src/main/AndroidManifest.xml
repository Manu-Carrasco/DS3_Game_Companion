<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ds3companion">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icono"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icono"
        android:supportsRtl="true"
        android:theme="@style/Theme.DS3Companion">
        <activity android:name=".InventoryActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/button_register"
            android:parentActivityName=".MainActivity" /> <!-- Sample AdMob app ID: ca-app-pub-3940256099942544~3347511713 -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/button_login"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".YoutubeActivity"
            android:label="@string/api_buttonGuides"
            android:parentActivityName=".MainActivity">
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />
    </application>

</manifest>