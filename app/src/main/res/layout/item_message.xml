<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/characterImage"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginStart="5dp"
        android:text="@string/button_login"
        app:srcCompat="@drawable/ic_personaje1" />

    <LinearLayout
        android:layout_marginTop="8dp"
        android:id="@+id/UsernameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/UsernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="start"
            android:paddingLeft="8dp"
            android:text="TextView"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/myMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="TextView"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/myLocationText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/chat_nullLocation"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/myLocationButton"
            android:layout_width="@dimen/locationIcon"
            android:layout_height="@dimen/iconTiny"
            android:backgroundTint="@color/nothing"
            android:drawableTop="@drawable/ic_world_location"/>
    </LinearLayout>

</LinearLayout>